# Clear Sight Environment Variables
# Copy this file to .env and update the values

# Required
SECRET_KEY=
CORS_ORIGINS=

# MySQL Database Configuration
# Required for MySQL database connection
DATABASE_TYPE=mysql
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=clearsight
MYSQL_USER=clearsight_user
MYSQL_PASSWORD=your_secure_password_here

# MySQL Connection Pool Settings (optional)
# Maximum number of connections in the pool
MYSQL_POOL_SIZE=5
# Connection recycle time in seconds (helps prevent stale connections)
MYSQL_POOL_RECYCLE=3600

# Optional - Face recognition settings
MIN_SHARPNESS=30.0
MIN_BRIGHTNESS=60.0
MAX_BRIGHTNESS=200.0

# Optional - Custom paths (uncomment if needed)
# DATABASE_PATH=/custom/path/to/database.db
# UPLOAD_PATH=/custom/path/to/uploads

# Optional - Server settings
# HOST=0.0.0.0
# PORT=5000
# FLASK_ENV=development