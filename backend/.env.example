# ClearSight Environment Variables
# Copy this file to .env and update the values

# Flask Configuration
# Generate SECRET_KEY with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your_secret_key_here

# Flask environment (development or production)
FLASK_ENV=development

# Database
# SQLite database file path (relative to backend folder)
DATABASE_PATH=clearsight.db

# CORS (Cross-Origin Resource Sharing)
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# Face Recognition Settings
# How strict to be when matching faces (0.0-1.0)
# Lower = stricter, Higher = more lenient
# Default 0.6 is recommended
FACE_TOLERANCE=0.6

# Image quality thresholds
MIN_BRIGHTNESS=50
MAX_BRIGHTNESS=200

# Server settings
HOST=0.0.0.0
PORT=5000

# Security Settings

# JWT Authentication
# Generate JWT_SECRET_KEY with: python -c 'import secrets; print(secrets.token_hex(32))'
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRY_HOURS=24

# Enable/disable authentication (true/false)
# Set to 'true' in production to require JWT tokens
# Set to 'false' for development/testing without authentication
AUTH_ENABLED=false

# Admin credentials (change these in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Rate Limiting
# Default rate limit for all endpoints
RATE_LIMIT_DEFAULT=200 per hour

# Rate limit storage backend
# Options: memory:// (default), redis://localhost:6379
RATE_LIMIT_STORAGE=memory://
