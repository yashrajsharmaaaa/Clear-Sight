# Clear Sight Environment Variables
# Copy this file to .env and update the values

# Required
SECRET_KEY=
CORS_ORIGINS=

# MySQL Database Configuration
# Required for MySQL database connection
DATABASE_TYPE=mysql
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=clearsight
MYSQL_USER=clearsight_user
MYSQL_PASSWORD=your_secure_password_here

# MySQL Connection Pool Settings (optional)
# Maximum number of connections in the pool
MYSQL_POOL_SIZE=5
# Connection recycle time in seconds (helps prevent stale connections)
MYSQL_POOL_RECYCLE=3600

# Optional - Face recognition settings
# Similarity threshold for face matching (0.0-1.0, lower = more lenient)
SIMILARITY_THRESHOLD=0.65
# Minimum and maximum face size in pixels for detection
MIN_FACE_SIZE=80
MAX_FACE_SIZE=400
# Feature vector dimension for face embeddings
FEATURE_DIMENSION=512
# Enable preprocessing (CLAHE normalization and denoising)
USE_PREPROCESSING=true
# Quality thresholds for face images
MIN_SHARPNESS=40.0
MIN_BRIGHTNESS=70.0
MAX_BRIGHTNESS=190.0

# Optional - Automatic recognition timing (frontend)
# Interval between face detection checks in milliseconds
AUTO_RECOGNITION_INTERVAL=2000
# Minimum delay between recognition attempts in milliseconds
MIN_RECOGNITION_DELAY=3000